##
##  Makefile -- Build procedure for sample ginga Apache module
##  Autogenerated via ``apxs -n ginga -g''.
##

builddir=.
top_srcdir=/Users/baba/Applications/apache
top_builddir=/Users/baba/Applications/apache
include /Users/baba/Applications/apache/build/special.mk

#   the used tools
APXS=apxs
APACHECTL=apachectl

#   additional defines, includes and libraries
#DEFS=-Dmy_define=my_value
#INCLUDES=-Imy/include/dir
#LIBS=-Lmy/lib/dir -lmylib

#   the default target
all: local-shared-build

#   install the shared object file into Apache 
install: install-modules-yes

#   cleanup
clean:
	-rm -f mod_ginga.o mod_ginga.lo mod_ginga.slo mod_ginga.la 

#   simple test
test: reload
	lynx -mime_header http://localhost/ginga

#   install and activate shared object by reloading Apache to
#   force a reload of the shared object file
reload: install restart

#   the general Apache start/restart/stop
#   procedures
start:
	$(APACHECTL) start
restart:
	$(APACHECTL) restart
stop:
	$(APACHECTL) stop

